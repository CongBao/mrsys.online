<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
          "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

	<!-- when developing -->
	<constant name="struts.devMode" value="true" />
	<constant name="struts.serve.static.browserCache" value="false" />
	<!-- delete above when publish -->

	<constant name="struts.action.extension" value="" />
	<constant name="struts.action.excludePattern" value="/res/.*?" />
	
	<package name="default" extends="struts-default" abstract="true">
	
		<interceptors>
			<interceptor name="loginAuthority" class="online.mrsys.movierecommender.action.authority.LoginInterceptor" />
			<interceptor-stack name="loginStack">
				<interceptor-ref name="loginAuthority" />
				<interceptor-ref name="defaultStack" />
			</interceptor-stack>
		</interceptors>
	
		<global-results>
			<result name="error">/WEB-INF/content/error.jsp</result>
		</global-results>
	
		<global-exception-mappings>
			<exception-mapping result="error" exception="online.mrsys.movierecommender.exception.MRException" />
			<exception-mapping result="error" exception="java.lang.Exception" />
		</global-exception-mappings>
	
	</package>
	
	<package name="root" extends="default">
	
		<action name="">
            <result>/WEB-INF/content/index.jsp</result>
        </action>
        
		<action name="*">
			<result>/WEB-INF/content/{1}.jsp</result>
		</action>
		
		<action name="test" class="online.mrsys.movierecommender.action.TestAction">
		    <result>/WEB-INF/content/test.jsp</result>
		</action>
		
	</package>
	
	<package name="user" extends="root" namespace="/user">
	
		<default-interceptor-ref name="loginStack" />
		
	</package>

</struts>